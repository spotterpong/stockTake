<div class='containner'>
    <div class='row'>
        <div class='col-xs-12'>
            <%= form_for(@comment, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <%= hidden_field_tag 'contact_id', params[:id] %>
                <div class='form-group'>
                    <div class="control-label col-sm-2">
                    <%= f.label :comment_body %></br>
                    </div>
                    <div class='col-sm-6'>
                    <%= f.text_area :comment_body, class: "form-control", placeholder: "Enter Notes" %>
                    </div>
                </div>

                <div class='form-group'>
                    <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit 'Add note',  class: "btn btn-primary btn-lg" %>
                    </div>
                </div>
            <% end %>
        </div> 
    </div>
</div>
