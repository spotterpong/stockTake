<div class='containner'>
    <div class='row'>
        <div class='col-xs-12'>
            <%= form_for(obj, :html => {class: "form-horizontal", role: "form"}, :url => {:action => 'update', :id => obj.id}) do |f| %>
                <div class='form-group'>
                    <div class="control-label col-sm-4">
                    <%= f.label :name %></br>
                    </div>
                    <div class='col-sm-4'>
                    <%= f.text_field :name, class: "form-control", placeholder: "Enter contact name" %>
                    </div>
                </div>
                <div class='form-group'>
                    <div class="control-label col-sm-4">
                    <%= f.label :home_phone %></br>
                    </div>
                    <div class='col-sm-4'>
                    <%= f.text_field :home_phone, class: "form-control", placeholder: "Enter contact home phone number" %>
                    </div>
                </div>
                <div class='form-group'>
                    <div class="control-label col-sm-4">
                    <%= f.label :mobile_phone %></br>
                    </div>
                    <div class='col-sm-4'>
                    <%= f.text_field :mobile_phone, class: "form-control", placeholder: "Enter contact mobile phone number" %>
                    </div>
                </div>
                <div class='form-group'>
                    <div class='col-sm-4 col-sm-offset-4'>
                    <%= f.label :patch_test, class: 'checkbox' do %>
                        <%= f.check_box :patch_test %>I have preformed the patch test?
                    <% end %>
                    </div>
                </div>
                <div class='form-group' id='patch-test-time'>
                    <div class="control-label col-sm-4">
                    <%= f.label :patch_test_time %>
                    </div>
                    <div class='col-sm-2'>
                    <%= f.text_field :patch_test_time, class: "form-control",
                                                    id: 'patch_test_time_field',
                                                    placeholder: "Enter patch test date " %>
                    </div>
                        <div class='col-sm-2'>
                        <%= label_tag :use_current_time?, class: 'checkbox' do %>
                            <%= check_box_tag :use_current_time? %>Use current time
                        <% end %>
                    </div>
                    
                </div>
                <div class='form-group'>
                    <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit 'Edit contact',  class: "btn btn-primary btn-lg" %>
                    </div>
                </div>
                
            <% end %>
        </div>
    </div>
</div>