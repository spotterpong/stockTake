<div class='containner'>
    <div class='row'>
        <div class='col-xs-12'>
            <%= form_for(@stock, :html => {class: "form-horizontal", role: "form"}) do |f| %>
                <div class='form-group'>
                    <div class="control-label col-sm-2">
                    <%= f.label :barcode %></br>
                    </div>
                    <div class='col-sm-4'>
                    <%= f.text_field :barcode, class: "form-control", placeholder: "Enter Barcode" %>
                    </div>
                </div>
                <div class='form-group'>
                    <div class="control-label col-sm-2">
                    <%= f.label :name %> </br>
                    </div>
                    <div class='col-sm-4'>
                    <%= f.text_field :name, class: "form-control", placeholder: "Enter Stock Name" %>
                    </div>
                </div>
                <div class='form-group'>
                    <div class="control-label col-sm-2">
                    <%= f.label :description %></br>    
                    </div>
                    <div class='col-sm-4'>
                    <%= f.text_field :description, class: "form-control", placeholder: "Enter Description of Stock e.g. 10/0" %>
                    </div>
                </div>
                <div class='form-group'>
                    <div class="control-label col-sm-2">
                    <%= f.label :quantity %></br>
                    </div>
                    <div class='col-sm-4'>
                    <%= f.number_field :quantity, :value => 0, class: "form-control", placeholder: "Enter quantity" %>
                    </div>
                </div>
                <div class='form-group'>
                    <div class="control-label col-sm-2">
                    <%= f.label :price %></br>
                    </div>
                    <div class='col-sm-4'>
                    <%= f.text_field :price, :value => 0, class: "form-control", placeholder: "Enter price e.g 10.10" %>
                    </div>
                </div>
                <div class='form-group'>
                    <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit :'Add Stock',  class: "btn btn-primary btn-lg" %>
                    </div>
                </div>
                
            <% end %>
        </div>
    </div>
</div>